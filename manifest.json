{
  "manifest_version": 3,
  "name": "Aigei Audio Downloader",
  "version": "2.0",
  "description": "Tự động bắt và tải file âm thanh từ aigei.com, tối ưu cho IDM.",
  "minimum_chrome_version": "114",
  
  "permissions": [
    "activeTab",
    "downloads",
    "webRequest",
    "storage",
    "scripting",
    "tabs",
    "contextMenus",
    "declarativeNetRequest"
  ],
  
  "host_permissions": [
    "*://*.aigei.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Aigei Audio Downloader"
  },

  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}
